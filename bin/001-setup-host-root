#!/bin/sh

## TO BE RUN AS ROOT
apt-get update
apt-get -y dist-upgrade
apt-get -y install build-essential \
                git \
                perl \
                libreadline-dev

cpan App::grindperl < /dev/null

useradd smoker --create-home --shell /bin/bash

mkdir ~smoker/.ssh
cp ~root/.ssh/authorized_keys ~smoker/.ssh

chown -R smoker: ~smoker/.ssh
